@model Domain.Dtos.Wallet.WalletTotalValuesAndEntrancesDto

@{
    ViewData["Title"] = "Finances Management System";
}
<div class="col-lg-6 mb-4">
    <div class="card">
        <h5 class="card-header">Current Values</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <h4 class="card-title">Total Income</h4>
                    @Html.DisplayFor(w => Model.TotalIncomes)
                </div>
                <div class="col-lg-6">
                    <h4 class="card-title">Total Expanse</h4>
                    @Html.DisplayFor(w => Model.TotalExpanses)
                </div>
            </div>
        </div>
    </div>

    <h2 class="row mt-3 mb-3">Wallets</h2>
    <div class="row">
        @foreach (var item in Model.WalletsValues)
        {
            <div class="col-lg-6">
                <div class="card mb-3">
                    <div class="card-header">
                        <b>@Html.DisplayFor(modelItem => item.Name)</b>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">Total Incomes</h6>
                        @Html.DisplayFor(modelItem => item.TotalIncomes)
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">Total Expanses</h6>
                        @Html.DisplayFor(modelItem => item.TotalExpanses)
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="col-lg-6">
    @Html.ActionLink("Create Entrance", "Create", "Entrance", null, new { @class = "btn btn-primary btn-sm btn-block mb-3" })

    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Type</th>
                <th>Value</th>
                <th>Category</th>
                <th>Created At</th>
                <th></th>
            </tr>
        </thead>
        @if (Model.Entrances.Count() > 0 && Model.Entrances.Any())
        {
            <tbody>
                @foreach (var item in Model.Entrances)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @{
                                switch (item.Type)
                                {
                                    case 1:
                                        @Html.Label("", "Income", htmlAttributes: new { @class = "badge badge-pill badge-success" });
                                        break;
                                    case 2:
                                        @Html.Label("", "Expanse", htmlAttributes: new { @class = "badge badge-pill badge-danger" });
                                        break;
                                    default:
                                        @Html.Label("", "Unknown", htmlAttributes: new { @class = "badge badge-pill badge-secondary" });
                                        break;
                                }
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Value)
                        </td>
                        <td>
                            @Html.Label("", item.Category.Name, htmlAttributes: new { @class = "badge badge-pill badge-primary" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Entrance", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>