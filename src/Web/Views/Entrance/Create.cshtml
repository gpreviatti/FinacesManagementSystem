@model Web.ViewModels.Entrance.EntranceCreateViewModel

@{
    ViewData["Title"] = "Create Entrance";
}
<div class="col-lg-12">
    <form asp-action="Create" method="post" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Entrance.Description" class="control-label"></label>
            <textarea asp-for="@Model.Entrance.Description" class="form-control bg-dark text-light"></textarea>
            <span asp-validation-for="@Model.Entrance.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Entrance.Type" class="control-label"></label>
            @Html.DropDownListFor(Model => Model.Entrance.Type, new SelectList(Model.EntranceTypes, "Value", "Name"), new { @class = "form-control bg-dark text-light" })
            <span asp-validation-for="@Model.Entrance.Type" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Entrance.Value" class="control-label"></label>
            <input asp-for="@Model.Entrance.Value" class="form-control bg-dark text-light" type="number" />
            <span asp-validation-for="@Model.Entrance.Value" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Wallets" class="control-label"></label>
            @Html.DropDownListFor(Model => Model.Entrance.WalletId, new SelectList(@Model.Wallets, "Id", "Name"), new { @class = "form-control bg-dark text-light" })
            <span asp-validation-for="@Model.Entrance.WalletId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Categories" class="control-label"></label>
            @Html.DropDownListFor(Model => Model.Entrance.CategoryId, new SelectList(Model.Categories, "Id", "Name"), new { @class = "form-control bg-dark text-light" })
            <span asp-validation-for="@Model.Entrance.CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Entrance.Observation" class="control-label"></label>
            <textarea asp-for="@Model.Entrance.Observation" class="form-control bg-dark text-light"></textarea>
            <span asp-validation-for="@Model.Entrance.Observation" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-secondary bg-black btn-sm" />
            @Html.ActionLink("Back to List", "Index", "Entrance", null, new { @class = "btn btn-secondary btn-sm" })
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
