@model Web.ViewModels.Category.CategoryUpdateViewModel

@{
    ViewData["Title"] = "Edit Category";
}

<div class="col-lg-12">
    <form asp-action="Edit" asp-antiforgery="true" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="@Model.Category.Id" class="form-control" readonly="readonly" hidden="hidden" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Category.Name" class="control-label"></label>
            <textarea asp-for="@Model.Category.Name" class="form-control bg-dark text-light"></textarea>
            <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Categories" class="control-label"></label>
            @Html.DropDownListFor(Model => Model.Category.CategoryId, new SelectList(@Model.Categories, "Id", "Name"), new { @class = "form-control bg-dark text-light" })
            <span asp-validation-for="@Model.Category.CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-secondary bg-black btn-sm" />
            @Html.ActionLink("Delete", "Delete", new { id = @Model.Category.Id }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
            @Html.ActionLink("Back to List", "Index", "Category", null, new { @class = "btn btn-secondary btn-sm" })
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
