@model IEnumerable<Domain.Dtos.Category.CategoryResultDto>

@{
    ViewData["Title"] = "Categories";
}

@Html.ActionLink("Create Category", "Create", null, htmlAttributes: new { @class = "btn btn-secondary bg-black btn-lg btn-block mb-3" })

<br />

<table class="table bg-dark text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    @if (Model != null && Model.Any())
    {
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @if (item.UserId != Guid.Empty)
                        {
                            @Html.ActionLink("Edit", "Edit", "Category", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-secondary bg-black btn-sm" })
                        }
                    </td>
                </tr>
            }
        </tbody>
    }
</table>
